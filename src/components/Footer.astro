---
import { Icon } from "astro-icon";
---

<footer
  class="lg:text-lg font-bold flex flex-row items-center text-cinnabar-800 py-2 px-4 justify-between relative footer-border"
>
  <span class="font-code flex flex-col lg:flex-row lg:items-center max-w-[30%]"
    ><Icon name="mdi:copyright" class="w-8 h-8 inline" />2023 Giuseppe Barillari<span
      class="whitespace-pre hidden lg:inline"
    > &centerdot; </span><span class="whitespace-pre">Credits</span></span
  >
  <div class="font-code flex lg:flex-row flex-col items-center">
    <a
      class="lg:pr-6 lg:py-0 pb-2 hover:text-cinnabar-500 hover:line-through"
      href="https://www.linkedin.com/in/giuseppe-barillari-276057208/"
      target="_blank"
      rel="noopener noreferrer"
      ><Icon name="mdi:linkedin" class="w-10 h-10" /></a
    >
    <a
      class="lg:pr-6 lg:py-0 py-2 hover:text-cinnabar-500 hover:line-through"
      href="https://github.com/joe2k01/"
      target="_blank"
      rel="noopener noreferrer"><Icon name="mdi:github" class="w-10 h-10" /></a
    >
    <a
      class="hover:text-cinnabar-500 lg:py-0 py-2 hover:line-through"
      href="#"
      target="_blank"
      rel="noopener noreferrer">CV</a
    >
  </div>
</footer>

<style>
  .footer-border::before {
    content: "";
    position: absolute;
    top: -3px;
    left: 0;
    height: 3px;
    width: 100%;
    background-image: linear-gradient(
      to right,
      theme(colors.sazerac.400),
      theme(colors.sazerac.600),
      theme(colors.cinnabar.700),
      theme(colors.cinnabar.500),
      theme(colors.sazerac.400),
      theme(colors.sazerac.600),
      theme(colors.cinnabar.700),
      theme(colors.cinnabar.500),
      theme(colors.sazerac.400)
    );
    background-size: 200% 100%;
    animation: gradient-slide 5s ease infinite;
  }

  @keyframes gradient-slide {
    0% {
      background-position: 100% 0%;
    }
    100% {
      background-position: 0% 0%;
    }
  }
</style>
