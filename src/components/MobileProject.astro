---
import Badge from "./Badge.astro";
interface Props {
  title: string;
  content: string;
  imageURL: string;
  badges: string[];
}

const { title, content, imageURL, badges } = Astro.props;
---

<div class="w-full flex flex-col project py-4">
  <img
    class="w-full sm:w-3/4 mx-auto aspect-video shadow-xl rounded-lg object-cover"
    src={imageURL}
  />

  <h2 class="text-3xl font-playfair font-bold text-cinnabar-700 mt-2">
    {title}
  </h2>
  <div class="flex flex-row flex-wrap mt-4">
    {badges.map((badge) => <Badge text={badge} tw="my-1" />)}
  </div>
  <p class="text-justify mt-4 font-roboto text-cinnabar-600 text-lg">
    {content}
  </p>
</div>
