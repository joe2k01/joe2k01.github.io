---
import { Icon } from "astro-icon";
import MobileMenuLink from "./MobileMenuLink.astro";
---

<>
  <button
    id="openMenuBtn"
    aria-label="Open navigation menu"
    class="md:hidden fixed top-0 right-0 m-4 z-40 p-4 rounded-xl shadow-md border-2 bg-gray-900 border-orange-400 shadow-orange-500"
  >
    <Icon name="ic:round-menu" class="text-orange-400 w-8 h-8" />
  </button>
  <div
    id="mobileMenu"
    class="md:hidden z-50 fixed left-0 top-0 right-0 bottom-0 flex flex-col justify-center transition-transform ease-in-out duration-300 bg-orange-500 translate-x-[200vw] overflow-scroll"
  >
    <button
      id="closeMenuBtn"
      aria-label="Close navigation menu"
      class="md:hidden fixed top-0 right-0 m-4 p-4 rounded-xl shadow-md border-2 bg-orange-400 border-gray-900 shadow-black"
    >
      <Icon name="ic:round-menu" class="text-gray-900 w-8 h-8" />
    </button>
    <MobileMenuLink link="about" />
    <MobileMenuLink link="education" />
    <MobileMenuLink link="volunteering" />
    <MobileMenuLink link="career" />
    <MobileMenuLink link="contact me" />
  </div>
  <script>
    const mobileMenu = document.getElementById("mobileMenu") as HTMLDivElement;
    const openBtn = document.getElementById("openMenuBtn") as HTMLButtonElement;
    const closeBtn = document.getElementById(
      "closeMenuBtn"
    ) as HTMLButtonElement;

    openBtn.addEventListener("click", () => {
      mobileMenu.classList.remove("translate-x-[200vw]");
    });

    closeBtn.addEventListener("click", () => {
      mobileMenu.classList.add("translate-x-[200vw]");
    });
  </script>
</>
