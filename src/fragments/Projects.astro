---
import Project from "../components/Project.astro";
import ProjectImage from "../components/ProjectImage.astro";
interface Props {
  id: string;
}

const { id } = Astro.props;
---

<div class="flex flex-col md:flex-row mx-2 md:mx-20 py-4" id={id}>
  <div class="order-1 md:order-2 w-full md:w-2/3">
    <div class="w-full sticky h-screen top-0 inline-block">
      <div class="w-full h-full relative">
        <ProjectImage imageNumber={1} src="casteddu2.jpg" />
        <ProjectImage imageNumber={0} src="casteddu1.jpg" />
      </div>
    </div>
  </div>
  <div class="order-2 md:order-1 w-full flex flex-col">
    <h1
      class="text-6xl py-6 w-full text-violet-400 font-playfair font-extrabold"
      id="projects-title"
    >
      Past Projects
    </h1>
    <div id="projects-wrapper">
      <Project
